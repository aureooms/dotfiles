	--exclude ".git/" \
	--exclude ".gitmodules" \
	--exclude "apt-get.sh" \
	--exclude "dotfiles.diff" \
	--exclude "dotfiles.update" \
	--exclude "dotfiles.upgrade" \
	--exclude "gem.sh" \
	--exclude "modules" \
	--exclude "npm.sh" \
	--exclude "pacman.sh" \
	--exclude "yaourt.sh" \
	--exclude "pip.sh" \
	--exclude "README.md" \
	--exclude "LICENSE" \
	-avnchL . ~;
