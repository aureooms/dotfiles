#!/usr/bin/env sh

max_brightness=$(cat /sys/class/backlight/gmux_backlight/max_brightness)
actual_brightness=$(cat /sys/class/backlight/gmux_backlight/actual_brightness)
step=`expr $max_brightness / 10`
brightness=`expr $actual_brightness - $step`

if [ $brightness -lt 0 ] ; then
brightness=0
fi

echo $brightness > /sys/class/backlight/gmux_backlight/brightness
