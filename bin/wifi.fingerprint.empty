#!/usr/bin/env sh

if [ "$1" = '' ] ; then
	echo 'tag missing' >&2
	exit 1
fi

CACHE="$HOME/.cache/wifi/fingerprint"
TAG="$1"
HASH=$(echo -n "$TAG" | sha1sum | head -c 40)
FILE="$CACHE/$HASH"

mkdir -p "$CACHE"

echo "saving to $FILE"
echo "{ \"tag\" : \"$TAG\" , \"fingerprint\" : { } }" | tee "$FILE"
