#!/usr/bin/env sh

if ! { lspci | grep -q BCM4331 ; } ; then exit ; fi

if ! is.wifi.running ; then exit ; fi

AP="$(iwgetid --raw --ap)"

CHIP="$(wifi.chips.default)"

QUALITY="$(wifi.endpoints "$CHIP" | jq '.[] | select( .address == "'"$AP"'") | .quality')"

if [ "$QUALITY" == '1' ] ; then wifi.ui.restart ; fi
