#!/usr/bin/env sh

index="$(mktemp --tmpdir --directory "${USER}-duplicates.group-index.XXXXXXXX.d")"
all="$index/all"
dup="$index/dup"
mkdir "$all"
mkdir "$dup"

function hash {
  xxhsum "$1" 2>/dev/null | head -c 16
}

while read -r path; do
  key="$(hash "$path")"
  orig="$all/$key"
  link="$dup/$key"
  if [ -e "$orig" ] && [ ! -e "$link" ] ; then ln "$orig" "$link" ; fi
  printf "%s\n" "$path" >> "$orig"
done

printf "%s\n" "$index"
