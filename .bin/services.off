#!/usr/bin/env sh

CACHE="${HOME}/.cache/services"

mkdir -p "$(dirname "${CACHE}")"
services.list > "${CACHE}"

for service in $(cat "${CACHE}" | jq -r 'with_entries(select(.value.origin == "user" and .value.type == "service" and .value.running == "running")) | keys[]') ; do
	echo "  * stop ${service}"
	/usr/bin/systemctl --user stop "${service}"
done
