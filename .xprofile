#!/bin/sh

# Add `~/bin` to the `$PATH`
if [ -d "$HOME/bin" ] ; then
	export PATH="$HOME/bin:$PATH";
fi

# ruby gems
export PATH="$(ruby -e 'print Gem.user_dir')/bin:$PATH"

if [ -d "$HOME/.ipe/styles" ] ; then
	export IPESTYLES="$HOME/.ipe/styles";
fi

systemctl --user import-environment PATH
systemctl --user start offlineimap

watch -n 600 memoize 0 weather.next > /dev/null 2>&1 &
watch -n 600 memoize 0 calendar.next > /dev/null 2>&1 &
watch -n 300 memoize 0 urlab.data > /dev/null 2>&1 &
