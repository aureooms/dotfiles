#!/usr/bin/env bash

DOTFILES="$(dirname "$(dirname "${BASH_SOURCE[0]}")")";

rsync \
	--exclude ".git/" \
	--exclude ".gitmodules" \
	--exclude ".travis.yml" \
	--exclude "bootstrap/" \
	--exclude "files/" \
	--exclude "Makefile" \
	--exclude "README.md" \
	--exclude "LICENSE" \
	-avnchL \
	"$DOTFILES"/ "$HOME"/ | \
	tail -n +2 | \
	head -n -3 | \
	grep -v '/$' ;
