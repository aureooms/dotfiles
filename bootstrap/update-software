#!/usr/bin/env sh

DOTFILES="$(dirname "$(dirname "${BASH_SOURCE}")")";

#echo " * pacman"
#sudo pacman -Syyu || exit "$?"
echo " * yaourt"
VISUAL=vim yaourt -Syua || exit "$?"
echo " * npm"
echo "  - overwrite semver/npm arch linux packages"
sudo npm install -g semver npm || exit "$?"
echo "  - update global packages"
sudo npm update -g || exit "$?"
echo " * pip"
sudo sh "$DOTFILES"/bootstrap/update-pip u || exit "$?"
