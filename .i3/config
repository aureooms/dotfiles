# Start i3bar to display a workspace bar (plus the system information i3status
# finds out, if available)
bar {
        id main
        position bottom
        status_command ~/bin/system.status

        wheel_up_cmd nop
        wheel_down_cmd nop
        #bindsym button4 nop
        #bindsym button5 nop

        tray_output none
}

bar {
        id extra
        position top
        status_command ~/bin/system.status.extra

        wheel_up_cmd nop
        wheel_down_cmd nop
        #bindsym button4 nop
        #bindsym button5 nop

        mode dock

        workspace_buttons no
        binding_mode_indicator no
}

bindsym $mod+u bar mode invisible extra
bindsym $mod+Shift+u bar mode dock extra


